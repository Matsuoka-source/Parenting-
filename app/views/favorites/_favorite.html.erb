<!--非同期にするために、いいね機能を部分テンプレート化-->
<% if @post.favorited_by?(current_user) %>
      <%= link_to @post.favorites.count, post_favorites_path(@post), method: :delete, remote: true %>
       <!--上記を押したらいいねが外れる-->
  <% else %>
      <%= link_to @post.favorites.count, post_favorites_path(@post), method: :post, remote: true %>
        <!--上記を押したらいいねが付く-->
  <% end %>
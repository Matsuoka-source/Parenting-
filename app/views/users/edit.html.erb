<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= attachment_image_tag @user, :image, :fill, 60, 60 %>
  <label for="inputName">イメージ画像</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>
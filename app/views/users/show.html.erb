<h1>ユーザー詳細</h1>
<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :image, :fill, 60, 60 %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<% @post_images.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image %>
  <% end %>
  <p>ユーザー画像: <%= attachment_image_tag post.user, :image, :fill, 60, 60 %></p>
  <p>投稿タイトル: <%= post.title%></p>
  <!--変数内のtitleを表示-->
  <p>コメント: <%= post.body %></p>
  <!--変数内のbodyを表示-->
  <p>ユーザ名: <%= post.user.name %></p>
  <!--変数内のuser_idに関連付けられているuserモデルのnameカラムを表示-->
</div>
<% end %>
<%= paginate @post_images %>